---
interface Props {
  title: string;
  category: string;
  imgSrc: string;
  url: string;
}
const { title, category, imgSrc, url } = Astro.props;
---
<a href={url} class="project-card">
  <div class="card-image-wrapper">
    <img src={imgSrc} alt={`Proyecto: ${title}`} loading="lazy" />
  </div>
  <div class="card-content">
    <span class="category">{category}</span>
    <h3>{title}</h3>
    <span class="view-project">Ver Proyecto â†’</span>
  </div>
</a>
<style>
  .project-card {
    display: block;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    text-decoration: none;
    color: var(--color-text);
    background-color: var(--color-bg-light);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .project-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-md);
  }
  .card-image-wrapper {
    width: 100%;
    height: 250px;
    overflow: hidden;
  }
  .project-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }
  .project-card:hover img { transform: scale(1.05); }
  .card-content { padding: 1.5rem; }
  .category {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color-primario);
    text-transform: uppercase;
  }
  .card-content h3 {
    margin: 0.5rem 0 0;
    font-family: var(--font-body);
    font-weight: 600;
    color: var(--color-dark);
  }
  .view-project {
    display: inline-block;
    margin-top: 1rem;
    font-weight: 500;
    color: var(--color-primario);
  }
</style>